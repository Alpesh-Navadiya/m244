            <resource>Custom_MyModule::config_customer</resource>
            <group id="General" translate="label" type="text" sortOrder="10" showInDefault="1">
                <label>General Options</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" canRestore="1">
